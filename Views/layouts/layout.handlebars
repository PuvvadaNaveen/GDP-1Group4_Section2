<html>

<head>
  <title>Stephi_Designer_App</title>
  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>


  {{#if user}}
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">NWMSU</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/home"><span class="glyphicon glyphicon-home"></span> &nbsp; Home</a></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Find</a>
        <ul class="dropdown-menu">
          <li><a href="/find">Performer Name</a></li>
          <li><a href="/findp">play</a></li>
          <li><a href="/fin">date</a></li>
        </ul>
      </li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Rentals</a>
        <ul class="dropdown-menu">
          <li><a href="/rental">Rental form</a></li>
          <li><a href="/rental_list">Rental list</a></li>
        </ul>
      </li>
      <li><a href="/basic">Send Basic Info form</a></li>
